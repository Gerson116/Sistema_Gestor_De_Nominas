@model SistemaGestorDeNominas.Models.DTOs.EmpleadoDTO 

@{
    ViewBag.Title = "Editar Empleado";
}

<div class="row mt-3">
    <div class="col-md-12">
        <h2>Editar empleado.</h2>
    </div>
</div>
<div class="row mt-2 justify-content-md-center">
    <div class="col-md-8">
        <form action="/Empleado/EditarEmpleado" method="post">
            <div class="form-group">
                <input type="hidden" name="id_empleado" value="@Model.ID" />
            </div>
            <div class="form-group">
                <!-- Aquí el nombre -->
                <label form="nombre">Nombre</label>
                <input type="text" name="nombre" placeholder="@Model.Nombre" value="@Model.Nombre" class="form-control" />
            </div>
            <div class="form-group">
                <!-- Aquí el apellido -->
                <label form="apellido">Apellido</label>
                <input type="text" name="apellido" placeholder="@Model.Apellido" value="@Model.Apellido" class="form-control" />
            </div>
            <div class="form-group">
                <!-- Aquí el sexo -->
                <input type="radio" name="sexo" id="femenino" value="f" />
                <label for="femenino">Femenino</label>

                <input type="radio" name="sexo" id="masculino" value="m" />
                <label for="masculino">Masculino</label>
            </div>
            <div class="form-group">
                <!-- Aquí el sueldo -->
                <label for="sueldo">Sueldo a pagar</label>
                <input type="number" name="sueldo" placeholder="@Model.Sueldo" value="@Model.Sueldo" class="form-control" />
            </div>
            <div class="form-group">
                <input type="radio" name="estadoDelCliente" value="Activar" />
                <label for="estadoDelCliente">Activar Empleado</label>
                <b>SOLO SI EL EMPLEADO FUE BLOQUEADO</b>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-block btn-primary icon-edit">
                    Realizar Cambios
                </button>
                @Html.ActionLink("Volver atrás", "ListadoEmpleado", "Empleado", null, new { @class= "btn btn-block btn-danger icon-left-big" })
            </div>
        </form>
    </div>
</div>